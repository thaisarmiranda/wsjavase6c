package br.com.falhas.implementacao;

public class TesteFalhas {

	public static void main(String[] args) {
		String palavra = "";
		try {     // coloca dentro do TRY as linhas que você imagina que podem ter uma exceção/erro
			int numero = Integer.parseInt("A");
			System.out.println(numero);
			
			System.out.println(palavra.length());
		}catch(Exception e) {      // dentro do CATCH o que vai ser executado se a exceção do TRY acontecer, dentro do parâmetro define qual exceção quer capturar
			System.out.println("Deu ruim!");
			e.printStackTrace();
			
		}

	}

}
