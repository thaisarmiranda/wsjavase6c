package br.com.universidade.modelo;

public class Aluno {

	private String nome;
	private String email;
	private int rm;
	// Sintaze para criação de um método
	// <modificador> <retorno> <nomeDoMetodo> ( <tipoParametro> <nomeParametro>, ... ) { }

	// Método de output
	public String exibirNome() {
		return nome;
	}
	public String exibirEmail() {
		return email;
	}
	public int exibirRm() {
		return rm;
	}
	public String exibirTudo() {
		return ("nome" + "email" + "rm");
	}
	
	// Método de input
	public void preencherNome(String pNome) {
		nome = pNome;
	}
	public void preencherEmail(String pEmail) {
		email = pEmail;
	}
	public void preencherRm(int pRm) {
		rm = pRm;
	}
	public void preencherTudo(String pNome2, String pEmail2, int pRm2) {
		nome = pNome2;
		email = pEmail2;
		rm = pRm2;
	}
}
