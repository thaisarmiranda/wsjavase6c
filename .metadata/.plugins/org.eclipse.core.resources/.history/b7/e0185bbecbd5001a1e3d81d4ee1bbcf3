package br.com.polimorfismo.implementacao;

import javax.swing.JOptionPane;

import br.com.polimorfismo.beans.Bacharelado;
import br.com.polimorfismo.beans.Formacao;
import br.com.polimorfismo.beans.Tecnologo;
import br.com.polimorfismo.tela.Magica;

public class TesteFormacao {

	public static void main(String[] args) {
		
		Formacao formacao;
		
		
		if (JOptionPane.showInputDialog("Qual formação deseja cadastrar?\n <T> para Tecnologo\n <B> para Bacharelado\n <M> para Medio").toUpperCase().charAt(0)=='T') {
			formacao = new Tecnologo(
					Magica.t("Descrição"),
					Magica.i("Periodo"),
					Magica.d("Mensalidade"),
					Magica.i("Duração"),
					Magica.b("Plano Extendido")
					);
			}
		
		else if (JOptionPane.showInputDialog("Qual formação deseja cadastrar?\n <T> para Tecnologo\n <B> para Bacharelado\n <M> para Medio").toUpperCase().charAt(0)=='M') {
			formacao = new Medio(
					Magica.t("Descrição"),
					Magica.i("Periodo"),
					Magica.d("Mensalidade"),
					Magica.i("Duração"),
					Magica.t("Tipo")
					);
			}
		
		else {
			formacao = new Bacharelado(
					Magica.t("Descrição"),
					Magica.i("Periodo"),
					Magica.d("Mensalidade"),
					Magica.i("Duração"),
					Magica.t("Projeto de Conclusão"),
					Magica.i("Carga Horário do Estágio")
					);
			}

	}

}

