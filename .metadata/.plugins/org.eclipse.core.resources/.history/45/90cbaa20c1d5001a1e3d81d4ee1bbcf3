package br.com.polimorfismo.beans;

public class Formacao {
	
	private String descricao;
	private int periodo;
	private double mensalidade;
	private int duracao;
	
	public String setAll() {
		return
				"Descrição..: " + descricao + "\n" +
				"Período....: " + periodo + "\n" +
				"Mensalidade: " + mensalidade + "\n" +
				"Duração: " + duracao;
	}
	
	public void getAll(String descricao, int periodo, double mensalidade, int duracao) {
		this.descricao = descricao;
		this.periodo = periodo;
		this.mensalidade = mensalidade;
		this.duracao = duracao;
	}
	
	public Formacao() {
		super();
	}
	public Formacao(String descricao, int periodo, double mensalidade, int duracao) {
		super();
		this.descricao = descricao;
		this.periodo = periodo;
		this.mensalidade = mensalidade;
		this.duracao = duracao;
	}
	public String getDescricao() {
		return descricao;
	}
	public void setDescricao(String descricao) {
		this.descricao = descricao;
	}
	public int getPeriodo() {
		return periodo;
	}
	public void setPeriodo(int periodo) {
		this.periodo = periodo;
	}
	public double getMensalidade() {
		return mensalidade;
	}
	public void setMensalidade(double mensalidade) {
		this.mensalidade = mensalidade;
	}
	public int getDuracao() {
		return duracao;
	}
	public void setDuracao(int duracao) {
		this.duracao = duracao;
	}
	
	

}

